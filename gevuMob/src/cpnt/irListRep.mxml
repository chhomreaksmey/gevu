<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				creationComplete="creationCompleteHandler(event)"
				>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				if(data!=null){
					labelDisplay.text = data.criteres+" : "+data.reponse;
					if(data.reponse=="Oui")colorFond.color = 0x339900;
					if(data.tLock=="Non")colorFond.color = 0x990033;

				}
			}
			
		]]>
	</fx:Script>
	
	<s:Group height="100%" width="100%">
		<s:Rect x="0" y="0" 
				radiusX="4" radiusY="4" 
				height="100%" width="100%">
			<s:fill><s:SolidColor id="colorFond" color="0x000000" /></s:fill>
			<s:stroke><s:SolidColorStroke color="0x000000" weight="1"/></s:stroke>
		</s:Rect>
		<s:HGroup height="100%" width="100%" left="4" verticalAlign="middle" paddingBottom="6" paddingLeft="6" paddingRight="6" paddingTop="6" gap="10" >
			<s:Label id="labelDisplay" width="100%"  height="100%" color="white" verticalAlign="middle" />
		</s:HGroup>

	</s:Group>	
</s:ItemRenderer>