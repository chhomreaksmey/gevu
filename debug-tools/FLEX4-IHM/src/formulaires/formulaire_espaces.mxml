<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" width="95%" horizontalCenter="0" 
		  title="Espaces" maxHeight="300">
	<mx:Grid width="100%">
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="40%" height="100%">
				<mx:Label text="ref" />
			</mx:GridItem>
			<mx:GridItem width="60%" height="100%">
				<mx:TextInput id="F1" width="100%"/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="40%" height="100%">
				<mx:Label text="reponse_1" />
			</mx:GridItem>
			<mx:GridItem width="60%" height="100%">
				<mx:TextInput id="F2" width="100%" />
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="40%" height="100%">
				<mx:Label text="reponse_2" />
			</mx:GridItem>
			<mx:GridItem width="60%" height="100%">
				<mx:TextInput id="F3" width="100%" />
			</mx:GridItem>
		</mx:GridRow>
		
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="40%" height="100%">
				<mx:Label text="id_type_espace" />
			</mx:GridItem>
			<mx:GridItem width="60%" height="100%">
				<mx:Label id="F8" width="100%" />
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="40%" height="100%">
				<mx:Label text="id_type_specifique_int" />
			</mx:GridItem>
			<mx:GridItem width="60%" height="100%">
				<mx:Label id="F9" width="100%" />
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%" height="100%">
			<mx:GridItem width="40%" height="100%">
				<mx:Label text="id_type_specifique_ext" />
			</mx:GridItem>
			<mx:GridItem width="60%" height="100%">
				<mx:Label id="F10" width="100%" />
			</mx:GridItem>
		</mx:GridRow>
	</mx:Grid>
	
	<mx:RemoteObject id="roModifBase"
					 destination="zend"
					 source="GEVU_ModifBase"
					 fault="faultHandlerService(event, &quot;Remote Object&quot;);">
		<mx:method name="updateTable"	result=";" />
		<mx:method name="deleteNode"	result=";" />
	</mx:RemoteObject>
	
	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			private function faultHandlerService(fault:FaultEvent, os:String=""):void {
				var str:String;
				str = "Code: "+fault.fault.faultCode.toString()+"\n"+
					"Detail: "+fault.fault.faultDetail.toString()+"\n"+
					"String: "+fault.fault.faultString.toString()+"\n";
				
				if (os!="")
					os = " - "+os;
				Alert.show(str, "FaultHandlerService"+os);
			}
			
			private var FieldId : int;
			
			public function displayNodeProperties( NodeData:Object ) : void {
				F1.data = NodeData.ref;
				F2.data = NodeData.reponse_1;
				F3.data = NodeData.reponse_2;
				F8.data = NodeData.id_type_espace;
				F9.data = NodeData.id_type_specifique_int;
				F10.data = NodeData.id_type_specifique_ext;
				
				FieldId = NodeData.id_espace;
			}
			
			public function saveModifications() : void {
				var arr:Array = new Array();
				arr["ref"]=F1.text;
				arr["reponse_1"]=F2.text;
				arr["reponse_2"]=F3.text;
				arr["id_type_espace"]=F8.text;
				arr["id_type_specifique_int"]=F9.text;
				arr["id_type_specifique_ext"]=F10.text;
				roModifBase.updateTable(4, FieldId, arr);
			}
			
			public function deleteData():void{
				roModifBase.deleteNode(4, FieldId);
			}
		]]>
	</mx:Script>
</mx:Panel>
