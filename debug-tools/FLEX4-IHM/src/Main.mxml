<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="vertical"
				horizontalAlign="center" height="70%" width="70%"
				verticalAlign="middle" initialize="init();" creationComplete="onStartup()">
	
	<mx:Script source="Main.as" />
	<mx:XML id="xmlTree"/>
	
	<mx:RemoteObject id="roDiagnostique" destination="zend" source="Model_DbTable_Gevu_Diagnostique">
		<mx:method name="getAll" result="doContactsResult( event )" />
	</mx:RemoteObject>
	
	<mx:HTTPService id="httpTree" url="../../../bdd/hierarchie.xml"
					resultFormat="e4x" result="treeLoaded()"/>
	
	<mx:Tree id="treeTree" dataProvider="{httpTree}" labelField="@lib" showRoot="true" height="40%" width="100%"
		 itemOpening="treeItemOpened( event )" />
