	<mx:Panel width="100%" height="40%" layout="vertical" title="Contacts" paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5"
			  horizontalAlign="center" horizontalCenter="0" verticalCenter="0">
		
		<mx:DataGrid id="dg" width="100%" height="100%">
			<mx:columns>
				<mx:DataGridColumn headerText="ID" dataField="id_lieu" />
				<mx:DataGridColumn headerText="Titre" dataField="lib" />
			</mx:columns>
		</mx:DataGrid>
	</mx:Panel>
